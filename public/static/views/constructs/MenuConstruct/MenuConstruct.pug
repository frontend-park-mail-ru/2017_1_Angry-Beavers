mixin menuConstruct(items)
    - var colClass = "col-lg-" + Math.round(12 / items.length);
    div.container.menu
        row
            each item in items
                div(class=colClass)
                    if item.backImg
                        img.img-responsive.my_btn_image(
                        src=item.defaultImg
                        onMouseOver="this.src='" + item.backImg + "'"
                        onMouseOut="this.src='" + item.defaultImg + "'"
                        id=item.id
                        )
                    else
                        img.img-responsive.my_btn_image(
                        src=item.defaultImg
                        id=item.id
                        )
