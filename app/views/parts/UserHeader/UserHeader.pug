            div.row
                h1.col-xs-6.userheader-login
                h1.col-xs-6.userheader-score-group
                    | Score:
                    |
                    small.userheader-score
        div(align="right").col-sm-1
            image(src=exiticon).userhead.userheader-logout
    div.row.visible-xs.visible-sm
        div.row
            div.col-xs-9
                div.row.userheader-appname
                    div.col-xs-6
                        h1
                            a.userheader-appname.userheader-appname-brand.userheader-appname-brand__joking= 'Joking'
                    div.col-xs-6
                        h1
                            a.userheader-appname.userheader-appname-brand.userheader-appname-brand__hazard= 'Hazard'
            div(align="right").col-xs-3
                image(src=exiticon).userhead.userheader-logout
        div.row
            h1.col-xs-6.userheader-login
